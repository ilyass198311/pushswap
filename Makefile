NAME = push_swap
CC = cc
RM = rm -f
FLAGS = -Wall -Wextra -Werror
CDLIBFT = ./libft
LIBFT = $(CDLIBFT)/libft.a

SRC_DIR = srcs/

SRCS =  $(SRC_DIR)/push.c \
		$(SRC_DIR)/reverse_rotate.c \
		$(SRC_DIR)/rotate.c \
		$(SRC_DIR)/stack_utils.c \
		$(SRC_DIR)/swap.c

OBJ = $(SRCS:$(SRC_DIR)/%.c=%.o)

%.o: $(SRC_DIR)/%.c
	$(CC) $(FLAGS) -c $< -o $@

all: $(NAME)

libftmake:
	@make -C $(CDLIBFT)

$(NAME): libftmake $(OBJ)
	$(CC) $(FLAGS) $(OBJ) $(LIBFT) -o $(NAME)

clean:
	@make -C $(CDLIBFT) clean
	@$(RM) $(OBJ)

fclean: clean
	@make -C $(CDLIBFT) fclean
	@$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re libftmake

#******************************************************************************#
#                                FUN                                           #      
#******************************************************************************#
